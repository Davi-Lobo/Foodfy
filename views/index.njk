{% extends "layout.njk" %}

{% block head %}
<title>Foodfy - Home</title>
{% endblock %}

{% block fullbanner %}
<section class="_container _marginBottom">
    <div class="banner-full _grid2">
        <div class="banner-text">
            <h1 class="title">As melhores receitas</h1>
            <p class="description">Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
        </div>
    </div>
</section>
{% endblock %}

{% block main %}
<main class="_grid _container _marginBottom" id="main">
    <div class="section-title">
        <h2 class="title">Mais acessadas</h2>
    </div>

    <div class="list-container">
        {% if items %}
            <ul class="list">
                {% for item in items %}
                    <li class="item" id="{{item.id}}">
                        <div class="item-info">
                            <div class="image">
                                <img class="img" src="{{item.image}}" alt="{{item.title}}">
                            </div>
                            <div class="description">
                                <h2 class="name">{{item.title}}</h2>
                                <h4 class="author">{{item.author}}</h4>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>

            <script src="/assets/js/redirect.js"></script>
        {% endif %}
    </div>
</main>
{% endblock %}